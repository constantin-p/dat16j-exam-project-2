<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<?import ui.control.CPTextField?>
<?import ui.control.CPIntegerField?>

<GridPane
    xmlns:fx="http://javafx.com/fxml"
    stylesheets="@../../css/main.css"
    prefHeight="400.0"
    prefWidth="300.0"
    hgap="15.0">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" maxWidth="15.0" minWidth="15.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
        <ColumnConstraints hgrow="NEVER" maxWidth="15.0" minWidth="15.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="15.0" minHeight="15.0" vgrow="NEVER" />
        <RowConstraints maxHeight="28.0" minHeight="28.0" vgrow="NEVER" />

        <RowConstraints maxHeight="30.0" minHeight="28.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints maxHeight="28.0" minHeight="28.0" vgrow="NEVER" />
        <RowConstraints maxHeight="30.0" minHeight="28.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints maxHeight="28.0" minHeight="28.0" vgrow="NEVER" />
        <RowConstraints maxHeight="30.0" minHeight="28.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints maxHeight="28.0" minHeight="28.0" vgrow="NEVER" />
        <RowConstraints maxHeight="30.0" minHeight="28.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints maxHeight="28.0" minHeight="28.0" vgrow="NEVER" />
        
        <RowConstraints prefHeight="28.0" minHeight="28.0" vgrow="ALWAYS" />
        <RowConstraints maxHeight="15.0" minHeight="15.0" vgrow="NEVER" />
        <RowConstraints maxHeight="42.0" minHeight="42.0" vgrow="NEVER" />
    </rowConstraints>
    <children>
        <Label fx:id="errorLabel"
            styleClass="error-label"
            text="INFO LABEL"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1" />
        <Label
            text="Model:"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            GridPane.valignment="BOTTOM">
            <padding>
                <Insets
                    bottom="2.0" />
            </padding>
        </Label>
        <CPTextField fx:id="modelTextField"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3" />

        <Label
            text="Brand:"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            GridPane.valignment="BOTTOM">
            <padding>
                <Insets
                    bottom="2.0" />
            </padding>
        </Label>
        <CPTextField fx:id="brandTextField"
            GridPane.columnIndex="1"
            GridPane.rowIndex="5" />

        <Label
            text="Capacity"
            GridPane.columnIndex="1"
            GridPane.rowIndex="6"
            GridPane.valignment="BOTTOM">
            <padding>
                <Insets
                    bottom="2.0" />
            </padding>
        </Label>
        <CPIntegerField fx:id="capacityTextField"
            GridPane.columnIndex="1"
            GridPane.rowIndex="7" />


        <Button fx:id="selectPriceButton"
                text="Select price"
                onAction="#handleSelectPriceAction"
                maxWidth="1.7976931348623157E308"
                GridPane.columnIndex="1"
                GridPane.rowIndex="9" />

        <HBox
            alignment="CENTER_RIGHT"
            GridPane.columnIndex="1"
            GridPane.rowIndex="14">
            <children>
                <Button
                    text="Cancel"
                    cancelButton="true"
                    onAction="#handleCancelAction">
                    <HBox.margin>
                        <Insets
                            right="15.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="submitButton"
                    text="OK"
                    defaultButton="true"
                    onAction="#handleOKAction" />
            </children>
            <padding>
                <Insets
                    bottom="8.0"
                    top="8.0" />
            </padding>
        </HBox>
    </children>
</GridPane>
